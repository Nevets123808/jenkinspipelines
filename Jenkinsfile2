pipeline{
    agent any
    environment{
        DB_PASSWORD = "badpassword"
    }
    stages{
        stage("Get repo"){
            steps{
                sh "rm -rf chapperootodo_client"
                sh "git clone https://gitlab.com/qacdevops/chaperootodo_client || true"
            }
        }
        stage("Install Docker"){
            steps{
                sh "curl https://get.docker.com | sudo bash"
                // sh "sudo usermod -aG docker jenkins"
            }
        }
        stage("Install Docker-compose"){
            steps{
                sh "sudo curl 'https://github.com/docker/compose/releases/download/1.29.2/docker-compose-${uname -s}-${uname -m}' -o /usr/local/bin/docker-compose"
            }
        }
        stage("Deploy"){
            steps{
                sh "cd chaperootodo_client/ && sudo docker-compose pull && sudo -E DB_PASSWORD=${DB_PASSWORD} docker-compose up -d"
            }
        }
    }
}