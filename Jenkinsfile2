pipeline{
    agent any
    environment{
        docker = sh "ls/etc/docker/ | grep 'keys'"
    }
    stages{
        stage("Get repo"){
            steps{
                sh "[ ! -d 'chaperootodo_client' ] && git clone https://gitlab.com/qacdevops/chaperootodo_client || true"
            }
        }
        stage("Install Docker"){
            steps{
                if (docker=="keys.json"){
                    sh "curl https://get.docker.com | sudo bash"
                    sh "sudo usermod -aG docker jenkins"
                }
            }
        }
        stage("Install Docker-compose"){
            steps{
                sh "sudo curl 'https://github.com/docker/compose/releases/download/1.29.2/docker-compose-${uname -s}-${uname -m}' -o /usr/local/bin/docker-compose"
            }
        }
        stage("Deploy"){
            steps{
                sh "sudo docker-compose pull && sudo -E DB_PASSWORD=${DB_PASSWORD} docker-compose up -d"
            }
        }
    }
}